<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="G6FinalProjectPostly.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="YiloButton" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="#fecc31" />
                <Setter Property="CornerRadius" Value="50" />
                <Setter Property="Padding" Value="10" />
            </Style>
            <Style TargetType="Button" x:Key="NoDefaultCapsButton">
                <Setter Property="TextTransform" Value="None"/>
            </Style>
            <Style x:Key="CustomNavigationPageStyle" TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="#fecc31" />
                <Setter Property="BarTextColor" Value="Black" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
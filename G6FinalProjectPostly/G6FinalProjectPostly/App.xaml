<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="G6FinalProjectPostly.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="YiloButton" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="#fecc31" />
                <Setter Property="CornerRadius" Value="50" />
                <Setter Property="Padding" Value="10" />
            </Style>
            <Style TargetType="Button" x:Key="NoDefaultCapsButton">
                <Setter Property="TextTransform" Value="None"/>
            </Style>
            <Style x:Key="CustomNavigationPageStyle" TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="#fecc31" />
                <Setter Property="BarTextColor" Value="Black" />
            </Style>
            <x:String x:Key="UserProfile">&#xe7fd;</x:String>
            <x:String x:Key="Lock_closed">&#xe899;</x:String>
            <x:String x:Key="Lock_open">&#xe898;</x:String>
            <x:String x:Key="Email_Icon">&#xe0e1;</x:String>
            <x:String x:Key="Arrow_right">&#xe5e1;</x:String>
            <x:String x:Key="Logout_Icon">&#xe9ba;</x:String>
            <x:String x:Key="SentEmail_Icon">&#xf187;</x:String>
        </ResourceDictionary>
    </Application.Resources>
</Application>